@page
@model GymMaxim.Pages.Trainers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>מאמנים</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>
<form>
    <div>
        <p>
            Find By Name:
            <input type="text" name="SearchString" />
            <input type="submit" value="Search" class="btn btn-primary" />
            <a asp-page="./Index">Back To Full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Trainer[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trainer[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trainer[0].IdentityCard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trainer[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trainer[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trainer[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trainer[0].DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trainer[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trainer[0].Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trainer[0].HomeNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Trainer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdentityCard)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HomeNumber)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TrainerID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.TrainerID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.TrainerID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
