@page
@model GymMaxim.Pages.Activities.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Activity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Activity.ActivityID" />
            <div class="form-group">
                <label asp-for="Activity.ActivityName" class="control-label"></label>
                <input asp-for="Activity.ActivityName" class="form-control" />
                <span asp-validation-for="Activity.ActivityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Activity.ActivityType" class="control-label"></label>
                <input asp-for="Activity.ActivityType" class="form-control" />
                <span asp-validation-for="Activity.ActivityType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Activity.Price" class="control-label"></label>
                <input asp-for="Activity.Price" class="form-control" />
                <span asp-validation-for="Activity.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Activity.WorkDays" class="control-label"></label>
                <input asp-for="Activity.WorkDays" class="form-control" />
                <span asp-validation-for="Activity.WorkDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Activity.Trainer" class="control-label"></label>
                <select asp-for="Activity.TrainerID" class="form-control" asp-items="ViewBag.TrainerID">
                    <option>select trainer</option>
                </select>
                <span asp-validation-for="Activity.TrainerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
